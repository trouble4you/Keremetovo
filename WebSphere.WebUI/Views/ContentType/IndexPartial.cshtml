                </div>
            </div>
        </div>*@

    <div class="list_outBox">

        <div id="id_tbl">

            <div class="data-table">

                <table class="table table-striped table-bordered table-condensed table-responsive">
                    <thead>
                        <tr>
                            <th class="class_select_col">
                                <div>
                                    <input type="checkbox" class="chk_selected_all" />
                                </div>
                            </th>
                            <th>
                                <div>Тип контента</div>
                            </th>
                            <th>
                                <div>Контроллер</div>
                            </th>
                            <th>
                                <div>Экшены</div>
                            </th>
                            <th>
                                <div>Группа</div>
                            </th>
                            <th>
                                <div>Доп. действия</div>
                            </th>
                        </tr>
                    </thead>

                    <tbody>

                        @{ // если модель не пуста
                            if (Model.Count() > 0)
                            {
                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td class="class_select_col">
                                            <div>
                                                <input class="select_row" type="checkbox" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="data_link">
                                                <a class="obj_edit_href" href="javascript:void(0);" data-ref="/ContentType/Change" data-id="@i.Id" data-obj="@i.Name">@i.Name</a>
                                            </div>
                                        </td>
                                        <td>
                                            <div>@i.Controller</div>
                                        </td>
                                        <td>
                                            <div>

                                                @{ // список экшенов
                                    
                                                    int count = 0;

                                                    foreach (var j in i.Actions)
                                                    {
                                                        // в нулевом экшене находится сам контроллер, так что его не отображаем
                                                        if(j.Name != i.Controller)
                                                        {
                                                            var str = "";
                                                            
                                                            if(j.Selected) 
                                                            {
                                                                str += @j.Name + ':' + ' ' + '1';
                                                            } 
                                                            else 
                                                            {
                                                                str += @j.Name + ':' + ' ' + '0';
                                                            }
                                                            if (count + 1 != i.Actions.Count())
                                                            {
                                                                str += ',';
                                                                str += ' ';
                                                            }
                                                            
                                                            @str
                                                        }
                                                        count++;
                                                    }
                                    
                                                }

                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                @i.contentGroup.Name
                                            </div>
                                        </td>
                                        <td class="td_row_menu Link_blue1">
                                            <div>
                                                <ul class="ul_row_menu">
                                                    <li>
                                                        <a class="obj_edit_href" href="javascript:void(0)" data-ref="/ContentType/Change" data-obj="@i.Name">Изменить</a>
                                                    </li>
                                                    <li>
                                                        <a class="obj_delete_href" data-ref="/ContentType/Delete" href="javascript:void(0)" data-id="@i.Id" data-obj="@i.Name">Удалить</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>
                </table>

            </div>

        </div>
    </div>

</div>
